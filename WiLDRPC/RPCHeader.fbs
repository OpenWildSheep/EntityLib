namespace WildRPC;

enum ContainerType : byte { Invalid = -1, Scalar, Array }

enum ElementType : byte { Invalid = -1, Boolean, Integer, Float, Vector2, UInt3, Vector3, Quat, Color, Position, String }

struct TypeInfo
{
	containerType:ContainerType;
	elementType:ElementType;
}

table RPCHeader
{
	managerName:string (required);
	methodName:string (required);
	parameterTypes:[TypeInfo] (required);
	resultTypes:[TypeInfo] (required);
}

root_type RPCHeader;
