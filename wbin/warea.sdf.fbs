include "wbin.fbs";

namespace WBIN;

enum ByteSize : byte // indicates what type the values are
{
	SHORT = 1,
	HALF = 2,
	FLOAT = 4,
	DOUBLE = 8
}

table AreaSDF
{
	value:[byte] (required); // This is a 3D array of float (x, y, z)
	valueByteSize: ByteSize = FLOAT;
	resolution: UInt3 (required); // how many voxel per axis
	originOffset: Float3(required);
	voxelSize: float;
}

root_type AreaSDF;

