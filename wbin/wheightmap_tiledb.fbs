include "wbin.fbs";

namespace WBIN;

table TileRef
{
	coordinates:UInt2 (required); // x,y position of the lower left corner in pixel coordinates
	path:string; // wheightmap resource path 
}

table TileDB
{
	tile_count:UInt2 (required); // tile count in both directions
	tile_resolution:UInt2 (required); // tile resolution in pixels
	tile_meter_size:Float2 (required); // size in meter of a tile
	tiles:[TileRef] (required); // all tiles
}

root_type TileDB;
