include "wbin.fbs";

namespace WBIN;

table BoneData
{
	parentBoneIndex:int; // Signed int: -1 if no parent
	name:string (required); // zero terminated string (not preceded by size)
}

table BlendShapeData
{
	name:string (required);
}

table Skl
{
	skeleton:[BoneData] (required);
	sourceFileInf:SourceFileInf;
	blendShapes:[BlendShapeData];
	bindPose:[BoneMatrix] (required);
}

root_type Skl;
